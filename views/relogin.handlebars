<!-- HTML for the Login Form -->
<div class="login-container">
  <form class="forms" id="login-form">
    <div class="imgcontainer">
      <h3>Please relogin to confirm your identity</h3>
    </div>

    <div class="form-container">
      <label for="username"><b>Username</b></label>
      <input
        type="text"
        placeholder="Enter Username"
        name="username"
        required
      />
      <label for="password"><b>Password</b></label>
      <input
        type="password"
        placeholder="Enter Password"
        name="password"
        required
      />
      <p class="warn-login" id="login-warning">Login failed. Please try again.</p>
      <button class="btn formbtn hover-effect" type="submit">Login</button>
    </div>
  </form>
</div>

<!-- JavaScript -->
<script src="/Public/js/login.js"></script>
