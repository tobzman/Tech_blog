<article>
  <div class="create-blog" data-id="0">
    <div class="hidden" id="blog-form">
      <div class="create-title">
        <label class="account-title" for="title">Title</label>
        <input type="text" name="title" id="title" placeholder="Title name" />
      </div>
      <div class="create-content">
        <label class="account-content" for="content">Content</label>
        <textarea name="content" id="content" cols="30" rows="10"></textarea>
      </div>
    </div>
    <p class="warning">Error code</p>
    <div class="blog-options">
      <button id="create-blog" class="account-btn hover-effect hidden">Create blog</button>
      <button id="start-blog" class="account-btn hover-effect">Make New Blog!</button>
    </div>
  </div>
</article>
<aside class="edit-blog-section">
  <h3>Edit recent blogs:</h3>
  {{#each blogs as |blog|}}
    {{> blogCardsEdit}}
  {{/each}}
</aside>

<script src="/Public/js/logout.js"></script>
<script src="/Public/js/account.js"></script>
